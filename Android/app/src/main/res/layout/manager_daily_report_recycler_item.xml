<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layoutDirection="rtl"
    app:cardElevation="16dp"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/mdr_card"
    android:layout_marginBottom="6dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/aseman_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/report"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/mdr_report_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="گزارش روزانه 20 آبان"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/mdr_btn_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/expand_more"
                    android:layout_gravity="end"
                    android:background="@color/aseman_light"
                    android:layout_marginBottom="10dp"/>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mdr_more_detail_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/mdr_txt_more_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="گزارش روزانه من"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>









</androidx.cardview.widget.CardView>